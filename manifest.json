{
  "manifest_version": 2,

  "name": "Neon bővítmény",
  "description": "Az első funkciógazdag verzió",
  "version": "2.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
	  
    }
  ],
 "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },  

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
	"tabs",
	"notifications",
    "webNavigation",
	"<all_urls>",
    "https://ajax.googleapis.com/",
	"https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
  ]
}