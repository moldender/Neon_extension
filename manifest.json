{
  "manifest_version": 2,

  "name": "Neon bővítmény",
  "description": "asd",
  "version": "1.0",

 "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },  

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
	"tabs",
	"<all_urls>",
    "https://ajax.googleapis.com/",
	"https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
  ]
}